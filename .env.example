# Example environment variables for Stock Beacon
# Copy this file to .env and fill in your actual API keys

# Required: Polygon.io API key for stock data
POLYGON_API_KEY=your_polygon_api_key_here

# Optional: OpenAI API key for ChatGPT integration
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Additional API keys (currently not used but available)
TWELVE_API_KEY=your_twelve_data_api_key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
NEWSAPI_KEY=your_newsapi_key

# Environment
NODE_ENV=production

# Port (automatically set by Render)
PORT=3000

